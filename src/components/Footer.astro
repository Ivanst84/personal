---
import config from "@config/config.json";
import HeartIcon from "@components/icons/HeartIcon.astro";
const year = new Date().getFullYear();
---

<footer class="mx-auto max-w-screen-lg px-4 sm:px-6 lg:px-8">
  <div class="border-t border-gray-100">
    <p class="text-center text-xs/relaxed text-gray-500 mt-8 mb-8">
      &copy; {year}. {config.site.title} -  All rights REVERSED
      <span class="block mt-2">
        Made with
        <HeartIcon />       
        in Mexicali, Mexico. by
        <a
          href=""
          class="text-gray-700 decoration-dashed transition hover:text-gray-700/75"
          >Ivan Sosa</a
        >
      </span>
    </p>
  </div>
</footer>
